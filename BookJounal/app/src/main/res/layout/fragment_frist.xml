<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".fragments.auth.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Status bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/not_use_space"
            android:orientation="vertical" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:gravity="center_horizontal">

                <!-- Logo y tÃ­tulo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/title"
                        android:textColor="#031264"
                        android:textSize="34sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- CardView con botones -->
                <androidx.cardview.widget.CardView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <Button
                            android:id="@+id/btn_SLogIn"
                            android:layout_width="190dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="16dp"
                            android:backgroundTint="@color/border_blue"
                            android:text="@string/login"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_SSingUp"
                            android:layout_width="190dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/border_blue"
                            android:text="@string/singup"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>