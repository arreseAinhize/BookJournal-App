<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".fragments.reading.LogBookInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Status bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/not_use_space"
            android:orientation="vertical" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnBackBookInfo"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/border_blue"
                        android:text="Back" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INSERT"
                            android:textColor="#031264"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LECTURE INFORMATION"
                            android:textColor="#031264"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- CardView del libro -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- Imagen -->
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="@color/not_use_space"
                                android:scaleType="centerCrop"
                                android:src="@drawable/book_ribbon_24dp" />
                        </LinearLayout>

                        <!-- Info del libro -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TITLE:"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvTitel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HEMEN Izenburua-a"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AUTHOR:"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvAutor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HEMEN eailea DOA"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ISBN:"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvISBN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HEMEN ISBN-a DOA"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GENRE:"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvGenre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HEMEN GENEROA DOA"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Fechas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="START DATE"
                            android:textStyle="bold"
                            android:textColor="#031264"
                            android:textSize="14sp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter new value">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sDateValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="END DATE"
                            android:textStyle="bold"
                            android:textColor="#031264"
                            android:textSize="14sp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter new value">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/eDateValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Tipo de lectura -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LECTURE TYPE"
                        android:textStyle="bold"
                        android:textColor="#031264"
                        android:textSize="14sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter new value">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lTypeValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Rating con 5 estrellas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RATING"
                        android:textStyle="bold"
                        android:textColor="#031264"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/star1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star_border_24dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            android:tag="1" />

                        <ImageButton
                            android:id="@+id/star2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star_border_24dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            android:tag="2" />

                        <ImageButton
                            android:id="@+id/star3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star_border_24dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            android:tag="3" />

                        <ImageButton
                            android:id="@+id/star4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star_border_24dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            android:tag="4" />

                        <ImageButton
                            android:id="@+id/star5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star_border_24dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            android:tag="5" />
                    </LinearLayout>

                    <!-- TextView para mostrar el rating seleccionado (opcional) -->
                    <TextView
                        android:id="@+id/tvRatingSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0/5"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Notas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTES"
                        android:textStyle="bold"
                        android:textColor="#031264"
                        android:textSize="14sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter new value">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bookNotesValue"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="top"
                            android:inputType="textMultiLine" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- BotÃ³n Guardar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnSaveBookInfo"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/border_blue"
                        android:text="Save" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>