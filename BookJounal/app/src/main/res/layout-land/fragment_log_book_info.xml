<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.reading.LogBookInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Espacio superior (status bar) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/not_use_space"
            android:orientation="vertical" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/fondo2land"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnBackBookInfo"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/border_blue"
                    android:text="@string/back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_book_title3"
                        android:textColor="#031264"
                        android:textSize="34sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Contenido principal en horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Columna izquierda - CardView del libro -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Imagen del libro -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@color/not_use_space"
                                android:scaleType="centerCrop"
                                android:src="@drawable/book_ribbon_24dp" />
                        </LinearLayout>

                        <!-- Información del libro -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_tv"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvTitel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="HEMEN Izenburua-a DOA"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/author_tv"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvAutor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="HEMEN egilea DOA"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/isbn_tv"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvISBN"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="HEMEN ISBN-a DOA"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/genre_tv"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvGenre"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="HEMEN GENEROA DOA"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Columna derecha - Campos editables -->
                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Fechas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sDate_tv"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_new_value"
                                    app:endIconDrawable="@drawable/ic_clear"
                                    app:endIconMode="clear_text">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/sDateValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="date" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/eDate_tv"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_new_value"
                                    app:endIconDrawable="@drawable/ic_clear"
                                    app:endIconMode="clear_text">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/eDateValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="date" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Tipo de lectura (ahora ocupa toda la fila) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lType_tv"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_new_value"
                                app:endIconDrawable="@drawable/ic_clear"
                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/lTypeValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Rating con 5 estrellas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rating_tv"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/star1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_star_border_24dp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="centerInside"
                                    android:tag="1" />

                                <ImageButton
                                    android:id="@+id/star2"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_star_border_24dp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="centerInside"
                                    android:tag="2" />

                                <ImageButton
                                    android:id="@+id/star3"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_star_border_24dp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="centerInside"
                                    android:tag="3" />

                                <ImageButton
                                    android:id="@+id/star4"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_star_border_24dp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="centerInside"
                                    android:tag="4" />

                                <ImageButton
                                    android:id="@+id/star5"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_star_border_24dp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="centerInside"
                                    android:tag="5" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvRatingSelected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0/5"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Notas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/bNotes_tv"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_new_value"
                                app:endIconDrawable="@drawable/ic_clear"
                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/bookNotesValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="80dp"
                                    android:gravity="top"
                                    android:inputType="textMultiLine" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Botón Guardar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">

                            <Button
                                android:id="@+id/btnSaveBookInfo"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/border_blue"
                                android:text="@string/save_value" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>